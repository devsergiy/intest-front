{{#link-to 'movies.new' class="btn btn-secondary pull-xs-right"}}Add new movie{{/link-to}}

<table class="table">
  <thead>
    <tr>
      <th>Year</th>
      <th>Title</th>
      <th {{action 'toggleSort'}}>Rating <span class="{{iconClass}}"></span></th>
    </tr>
  </thead>
  <tbody>
    {{#each sortedMovies as |movie|}}
      <tr>
        <td>{{movie.year}}</td>
        <td>
           {{#link-to 'movie' movie}}{{movie.title}}{{/link-to}}
        </td>
        <td>{{movie.rate}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
