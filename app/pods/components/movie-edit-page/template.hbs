<form {{action 'save' on='submit'}}  class='form-signin'>
  <h2 class="form-signin-heading">Edit</h2>

  {{#each movie.errors.messages as |message|}}
    <div class="text-danger">
      {{message}}
    </div>
  {{/each}}

  <div class="form-group">
    <label for='title'>Title</label>
    {{input id='title' placeholder='title' value=movie.title class='form-control'}}
  </div>
  <div class="form-group">
    <label for='userRating'>User rating</label>
    {{input id='userRating' placeholder='Rating' type="number" value=movie.userRating class='form-control'}}
  </div>
  <div class="form-group">
    <label for='year'>Year</label>
    {{input id='year' placeholder='year' type="number" value=movie.year class='form-control'}}
  </div>
  <div class="form-group">
    <label for='director'>Director</label>
    {{input id='director' placeholder='director' value=movie.director class='form-control'}}
  </div>
  <div class="form-group">
    <label for='actors'>Actors:</label>
    {{input id='actors' placeholder='actors' value=movie.actors class='form-control'}}
  </div>

  <button type='submit' class="btn btn-lg btn-primary btn-block">Save</button>
</form>
