<h2>Register</h2>

<form {{action 'createUser' on='submit'}}>
  <div class="form-group">
    <label for='firstName'>FIrst name</label>
    {{input id='firstName' placeholder='Enter first name' value=firstName class='form-control'}}
  </div>
  <div class="form-group">
    <label for='lastName'>Last name</label>
    {{input id='lastName' placeholder='Enter last name' value=lastName class='form-control'}}
  </div>
  <div class="form-group">
    <label for='email'>Email</label>
    {{input id='email' placeholder='Enter email' value=email class='form-control'}}
    <small class="below">{{errors.email}}</small>
  </div>
  <div class="form-group">
    <label for='password'>Password</label>
    {{input id='password' placeholder='Enter Password' type='password' value=password class='form-control'}}
    <small class="below">{{errors.password}}</small>
  </div>
  <div class="form-group">
    <label for='password-confirmation'>Password confirmation</label>
    {{input id='password-confirmation' placeholder='Enter Password' type='password' value=passwordConfirmation class='form-control'}}
    <small class="below">{{errors.password_confirmation}}</small>
  </div>

  <button type='submit' class="btn btn-lg btn-primary btn-block">Sign up</button>
</form>
